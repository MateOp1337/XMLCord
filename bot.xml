<bot>
    <config>
        <name>Your bot name</name>
        <prefix>-</prefix>
        <token></token>
        <tag case_insensitive="true"/>
        <tag strip_after_prefix="true"/>
        <tag ignore_self="true"/>
        <tag token=".env"/>
    </config>
    <variables>
        <my_variable>123</my_variable>
        <error_channel>1234</error_channel>
    </variables>
    <commands>
        <help>
            <embed>
                <title>Help embed</title>
                <description>Some text :P</description>
                <color>#ff0000</color>
            </embed>
            <reply_message>
                <content>I like cheese!</content>
            </reply_message>
        </help>
        <test>
            <reply_message>
                <content>XD</content>
            </reply_message>
        </test>
        <echo>
            <argument name='message' type='text' rest='true'/>
            <reply_message>
                <content>{argument(message)}</content>
            </reply_message>
        </echo>
    </commands>
    <events>
        <on_ready>
            <log>Bot is ready!</log>
        </on_ready>
        <on_message>
            <argument name='message' rest='true'/>
            <message>
                <content>You said: {argument(message).content}</content>
            </message>
        </on_message>
        <on_command_error>
            <argument name='ctx'/>
            <argument name='error'/>
            <channel_message id='{var(error_channel)}'>
                <content>{argument(error)}</content>
            </channel_message>
        </on_command_error>
    </events>
</bot>
